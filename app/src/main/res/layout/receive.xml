<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/receive_msg_background"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is receive message"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="18sp"
            android:maxWidth="300dp"
            android:minWidth="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_receive_message"
            android:layout_alignEnd="@id/txt_receive_message"
            android:layout_marginRight="5dp"
            android:text="11.23" />

    </RelativeLayout>


</RelativeLayout>